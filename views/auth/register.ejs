<%- include('../partials/header') %>

<div style="display: flex; justify-content: center; align-items: center; min-height: 70vh;">
    <div class="card" style="width: 100%; max-width: 500px;">
        <div class="card-header text-center">
            <h2><i class="fas fa-user-plus"></i> Buat Akun Baru</h2>
            <p style="color:var(--text-color-muted); font-size:0.9rem;">Bergabunglah dengan AlphaPanel X hari ini!</p>
        </div>
        <form action="/auth/register" method="POST" class="form-modern">
            <div class="form-group">
                <label for="username"><i class="fas fa-user"></i> Username</label>
                <input type="text" id="username" name="username" value="<%= typeof username != 'undefined' ? username : '' %>" required placeholder="Pilih username unik">
            </div>
            <div class="form-group">
                <label for="email"><i class="fas fa-at"></i> Alamat Email</label>
                <input type="email" id="email" name="email" value="<%= typeof email != 'undefined' ? email : '' %>" required placeholder="Email aktif Anda">
            </div>
            <div class="form-group">
                <label for="password"><i class="fas fa-key"></i> Kata Sandi</label>
                <input type="password" id="password" name="password" required placeholder="Minimal 6 karakter">
            </div>
            <div class="form-group">
                <label for="password2"><i class="fas fa-redo-alt"></i> Konfirmasi Kata Sandi</label>
                <input type="password" id="password2" name="password2" required placeholder="Ulangi kata sandi">
            </div>
            <div class="form-actions" style="text-align:center;">
                <button type="submit" class="btn-alpha btn-secondary" style="width:100%;"><i class="fas fa-check-circle"></i> Register Akun</button>
            </div>
        </form>
        <p class="text-center mt-1" style="font-size:0.9rem;">Sudah punya akun? <a href="/auth/login">Login di sini</a></p>
    </div>
</div>

<%- include('../partials/footer') %>