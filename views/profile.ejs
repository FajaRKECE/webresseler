<%- include('partials/header') %>

<div class="card profile-card">
    <div class="card-header">
        <h2><i class="fas fa-id-badge"></i> Profil Pengguna</h2>
    </div>
    <div class="profile-avatar">
        <i class="fas fa-user-astronaut"></i>
    </div>
    <div class="profile-details">
        <p><strong>Username:</strong> <%= userProfile.username %></p>
        <p><strong>Email:</strong> <%= userProfile.email %></p>
        <p><strong>Role:</strong> <span style="text-transform: capitalize; font-weight:bold; color:var(--primary-color);"><%= userProfile.role %></span></p>
        <p><strong>Status Approval:</strong>
            <% if (userProfile.isApproved) { %>
                <span class="text-success"><i class="fas fa-check-circle"></i> Disetujui</span>
            <% } else { %>
                <span class="text-warning"><i class="fas fa-clock"></i> Menunggu / Tidak Aktif</span>
            <% } %>
        </p>
        <p><strong>Pterodactyl User ID:</strong>
            <% if (userProfile.pterodactylUserId) { %>
                <span style="font-weight:bold; color:var(--secondary-color);"><%= userProfile.pterodactylUserId %></span>
            <% } else { %>
                <span style="color:var(--text-color-muted);">Belum diatur oleh Admin</span>
            <% } %>
        </p>
        <p><strong>Tanggal Bergabung:</strong> <%= new Date(userProfile.createdAt).toLocaleDateString('id-ID', { year: 'numeric', month: 'long', day: 'numeric', hour:'2-digit', minute:'2-digit' }) %></p>
    </div>
    <div class="form-actions">
        <a href="/" class="btn-alpha btn-info"><i class="fas fa-arrow-left"></i> Kembali ke Home</a>
    </div>
</div>

<%- include('partials/footer') %>